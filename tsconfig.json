{
    "ts-node": {
        "files": true
    },
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "target": "es2017",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "listFiles": false,
        "lib": ["ES2020", "DOM","DOM.Iterable"],
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts"
    ]
}